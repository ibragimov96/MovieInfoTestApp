<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity">

        <ImageView
            android:id="@+id/imageViewBigPoster"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <ImageView
            android:id="@+id/imageViewAddToFavourite"
            android:layout_width="@dimen/size_of_star_land_orient"
            android:layout_height="@dimen/size_of_star_land_orient"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:onClick="onClickChangeFavourite"
            app:layout_constraintEnd_toEndOf="@+id/imageViewBigPoster"
            app:layout_constraintTop_toTopOf="@+id/imageViewBigPoster"
            app:layout_constraintVertical_bias="0.444"
            app:srcCompat="@drawable/star_favourite_yellow" />

    <ScrollView
        android:id="@+id/scrollViewInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewBigPoster">

    <include
        layout="@layout/movie_info"
        android:id="@+id/movie_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>